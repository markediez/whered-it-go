<p id="notice"><%= notice %></p>

<h1>Bill Templates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Reminder template</th>
      <th>Url</th>
      <th>Triggered at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_templates.each do |bill_template| %>
      <tr>
        <td><%= bill_template.name %></td>
        <td><%= bill_template.amount %></td>
        <td><%= bill_template.reminder_template_id %></td>
        <td><%= bill_template.url %></td>
        <td><%= bill_template.triggered_at %></td>
        <td><%= link_to 'Show', bill_template %></td>
        <td><%= link_to 'Edit', edit_bill_template_path(bill_template) %></td>
        <td><%= link_to 'Destroy', bill_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

